# Production Configuration Example
# Copy this file to production.yaml and configure with your production values
# All sensitive values should be set here (not via environment variables)

env: "production"

http_server:
  address: "0.0.0.0:8080"
  timeout: "4s"
  idle_timeout: "60s"

database:
  # Production database URL with SSL required
  # Format: postgres://user:password@host:port/database?sslmode=require
  url: "postgres://postgres:your_production_password@db:5432/pwp_db?sslmode=require"

profile:
  name: "Your Name"
  description: "Your professional description"
  skills: ["Go", "React", "Docker", "PostgreSQL"]
  contacts:
    email: "your@email.com"
    github: "https://github.com/yourusername"
    telegram: "https://t.me/yourusername"

auth:
  # CRITICAL: Generate strong random secret (min 32 characters)
  # Example: openssl rand -base64 48
  session_secret: "your-strong-random-session-secret-min-32-characters-long"
  session_max_age: "168h" # 7 days
  cookie_name: "session_id"
  # Set to your production domain
  # Examples: "fus1ond.ru" or ".fus1ond.ru" (with dot for subdomains)
  cookie_domain: "fus1ond.ru"
  # MUST be true in production with HTTPS
  cookie_secure: true
  cookie_http_only: true
  cookie_same_site: "lax"

oauth:
  # Your production domain (HTTPS required)
  base_url: "https://fus1ond.ru"
  frontend_url: "https://fus1ond.ru"

  google:
    client_id: "your-google-client-id.apps.googleusercontent.com"
    client_secret: "your-google-client-secret"
    enabled: true

  github:
    client_id: "your-github-client-id"
    client_secret: "your-github-client-secret"
    enabled: true

  vk:
    client_id: "your-vk-client-id"
    client_secret: "your-vk-client-secret"
    enabled: true

cors:
  enabled: true
  allowed_origins:
    - "https://fus1ond.ru"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Accept"
    - "Authorization"
    - "Content-Type"
    - "X-CSRF-Token"
  exposed_headers:
    - "Link"
  allowed_credentials: true
  max_age: 300

rate_limit:
  enabled: true
  requests_limit: 100
  window_seconds: 60
