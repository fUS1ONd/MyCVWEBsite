# Production Configuration Example
# Copy this file to production.yaml and configure with your production values
# Most values should be set via environment variables for security

env: "production"

http_server:
  address: "0.0.0.0:8080"
  timeout: "4s"
  idle_timeout: "60s"

database:
  # Set via DATABASE_URL environment variable
  url: "${DATABASE_URL}"

profile:
  name: "Your Name"
  description: "Your professional description"
  skills: ["Go", "React", "Docker", "PostgreSQL"]
  contacts:
    email: "your@email.com"
    github: "https://github.com/yourusername"
    linkedin: "https://linkedin.com/in/yourusername"

auth:
  # CRITICAL: Set via SESSION_SECRET environment variable (min 32 random characters)
  session_secret: "${SESSION_SECRET}"
  session_max_age: "168h" # 7 days
  cookie_name: "session_id"
  # Set cookie domain for your production domain
  # Examples: "example.com", ".example.com" (with dot for subdomains)
  cookie_domain: "${COOKIE_DOMAIN}"
  # MUST be true in production with HTTPS
  cookie_secure: true
  cookie_http_only: true
  cookie_same_site: "lax"

oauth:
  # Your production domain (HTTPS required)
  # Example: https://example.com
  base_url: "${OAUTH_BASE_URL}"
  # Usually same as base_url, can be different if frontend is separate
  frontend_url: "${OAUTH_FRONTEND_URL}"

  google:
    client_id: "${GOOGLE_CLIENT_ID}"
    client_secret: "${GOOGLE_CLIENT_SECRET}"
    enabled: true

  github:
    client_id: "${GITHUB_CLIENT_ID}"
    client_secret: "${GITHUB_CLIENT_SECRET}"
    enabled: true

  vk:
    client_id: "${VK_CLIENT_ID}"
    client_secret: "${VK_CLIENT_SECRET}"
    enabled: true

cors:
  enabled: true
  allowed_origins:
    # Your production domain
    - "${OAUTH_BASE_URL}"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "OPTIONS"
  allowed_headers:
    - "Accept"
    - "Authorization"
    - "Content-Type"
    - "X-CSRF-Token"
  exposed_headers:
    - "Link"
  allowed_credentials: true
  max_age: 300

rate_limit:
  enabled: true
  requests_limit: 100
  window_seconds: 60
