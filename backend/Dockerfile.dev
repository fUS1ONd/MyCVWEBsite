FROM golang:1.22-alpine

# Install air for hot reload
RUN go install github.com/cosmtrek/air@latest

# Install wget for healthcheck
RUN apk add --no-cache wget

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Run air for hot reload
CMD ["air", "-c", ".air.toml"]
